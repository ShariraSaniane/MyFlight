<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/header"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:id="@+id/myflight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My"
            android:textSize="50sp"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flight"
            android:textSize="50sp"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/cyan"/>

    </LinearLayout>

    <TextView
        android:id="@+id/track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/myflight"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinsregular"
        android:text="@string/track"
        android:textColor="@color/white"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/track"
        android:fontFamily="@font/poppinsbold"
        android:text="@string/register"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@id/RegisterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            android:id="@+id/ketNama"/>

        <EditText
            android:id="@+id/edt_name_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/fill_shape"
            android:hint="Your Full Name"
            android:paddingLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/edt_email_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/fill_shape"
            android:hint="Your E-mail"
            android:paddingLeft="20dp"/>

        <TextView
            android:id="@+id/fillPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/edt_password_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/fill_shape"
            android:hint="at least 8 character"
            android:paddingLeft="20dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RegisterLayout"
        android:text="Continue"
        android:background="@drawable/button2_shape"
        android:width="300dp"
        android:height="55dp"
        android:fontFamily="@font/poppinsregular"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>