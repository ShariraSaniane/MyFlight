<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Weather">

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        android:textSize="50sp"
        android:textColor="@color/navy"
        android:fontFamily="@font/poppinsbold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <ImageButton
        android:id="@+id/calendarBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/calendar"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"/>

    <ImageView
        android:id="@+id/batas"
        android:layout_centerHorizontal="true"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/day"
        android:background="@drawable/line"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/batas"
        android:layout_centerHorizontal="true"
        android:textAlignment="textStart"
        android:text="Jakarta"
        android:textColor="@color/navy"
        android:fontFamily="@font/poppinsbold"
        android:background="@drawable/button3_shape"
        android:drawableRight="@drawable/navigate"
        android:elevation="5dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:width="350dp"
        android:height="60dp"
        android:layout_marginTop="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content1"
        android:layout_centerHorizontal="true"
        android:textAlignment="textStart"
        android:text="Bali"
        android:textColor="@color/navy"
        android:fontFamily="@font/poppinsbold"
        android:background="@drawable/button3_shape"
        android:drawableRight="@drawable/navigate"
        android:elevation="5dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:width="350dp"
        android:height="60dp"
        android:layout_marginTop="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/content3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content2"
        android:layout_centerHorizontal="true"
        android:textAlignment="textStart"
        android:text="Surabaya"
        android:textColor="@color/navy"
        android:fontFamily="@font/poppinsbold"
        android:background="@drawable/button3_shape"
        android:drawableRight="@drawable/navigate"
        android:elevation="5dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:width="350dp"
        android:height="60dp"
        android:layout_marginTop="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/content4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content3"
        android:layout_centerHorizontal="true"
        android:textAlignment="textStart"
        android:text="Batam"
        android:textColor="@color/navy"
        android:fontFamily="@font/poppinsbold"
        android:background="@drawable/button3_shape"
        android:drawableRight="@drawable/navigate"
        android:elevation="5dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:width="350dp"
        android:height="60dp"
        android:layout_marginTop="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/content5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content4"
        android:layout_centerHorizontal="true"
        android:textAlignment="textStart"
        android:text="Makassar"
        android:textColor="@color/navy"
        android:fontFamily="@font/poppinsbold"
        android:background="@drawable/button3_shape"
        android:drawableRight="@drawable/navigate"
        android:elevation="5dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:width="350dp"
        android:height="60dp"
        android:layout_marginTop="10dp"/>

</RelativeLayout>